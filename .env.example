# TeachAI Platform Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# GENERAL CONFIGURATION
# ============================================
NODE_ENV=production
PYTHON_ENV=production
REACT_ENV=production

# ============================================
# SERVICE PORTS
# ============================================
BACKEND_PORT=4000
FLASK_PORT=5000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DB_NAME=teachai
MONGO_PORT=27017

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# ============================================
# API KEYS
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
FLASK_API_KEY=your_secure_flask_api_key_here

# ============================================
# STRIPE CONFIGURATION
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=14

# ============================================
# MONITORING CONFIGURATION
# ============================================
METRICS_INTERVAL=60000
ALERT_ERROR_RATE_THRESHOLD=5
ALERT_RESPONSE_TIME_THRESHOLD=1000
ALERT_MEMORY_THRESHOLD=80

# ============================================
# HEALTH CHECK CONFIGURATION
# ============================================
HEALTH_CHECK_TIMEOUT=5000

# ============================================
# REACT APP CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost:4000/api/v1
REACT_APP_FLASK_URL=http://localhost:5000
REACT_APP_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# ============================================
# PRODUCTION MONITORING (Optional)
# ============================================
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================
# SCALING CONFIGURATION
# ============================================
CLUSTER_MODE=enabled
MAX_OLD_SPACE_SIZE=896
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ============================================
# SSL CONFIGURATION (Production)
# ============================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket_name